<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#A6A6AA"
        tools:ignore="Suspicious0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:gravity="center">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_profile"
                android:layout_width="35sp"
                android:layout_height="35dp"
                android:src="@drawable/ic_profile"
                app:shapeAppearanceOverlay="@style/circle"
                android:scaleType="centerCrop"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bogibek_Matyaqubov"
                android:textColor="@color/black"
                android:layout_marginLeft="4dp"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="February 2, 2021"
                android:textColor="#2498FA"
                android:layout_marginStart="4dp"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right">

            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/ic_more"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--        <androidx.viewpager.widget.ViewPager-->
        <!--            android:id="@+id/photos_pager"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"/>-->

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_post"
            android:paddingHorizontal="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/img" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_love"/>

                <ImageView
                    android:id="@+id/iv_comment"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_comment"/>

                <ImageView
                    android:id="@+id/iv_send"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_share"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/iv_share"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_save"
                        android:layout_marginEnd="8dp"/>

                </LinearLayout>
            </LinearLayout>

            <!--            <TableLayout-->
            <!--                android:id="@+id/tab_photos"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                app:tabGravity="center"-->
            <!--                app:tabBackground="@drawable/tab_selector"-->
            <!--                app:tabIndicator="@null"/>-->
        </FrameLayout>








    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center_vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_profile"
            app:shapeAppearanceOverlay="@style/circle"
            android:scaleType="centerCrop"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liked by bazarov_6515 and 44,686 others"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp">

        <TextView
            android:id="@+id/tv_caption_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shahriyor"
            android:layout_marginStart="6dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_caption"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bu rasm juda zo'r ekan..."
            android:layout_marginStart="8dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="more"
            android:layout_marginStart="16dp"
            android:textColor="#90000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View all 120 comments"
            android:layout_marginLeft="13dp"
            android:textColor="#90000000"/>
    </LinearLayout>
</LinearLayout>

